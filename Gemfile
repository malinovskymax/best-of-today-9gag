source 'https://rubygems.org'

ruby '2.2.0'

gem 'rails', '4.2.0'

gem 'whenever', require: false

gem 'nokogiri'

# Database
gem 'pg'

# Assets
gem 'slim'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem "bower-rails", "~> 0.10.0"
gem 'sprockets-rails'


group :development, :test do
  gem 'spring'

  # Testing
  gem 'rspec-rails', '~> 3.0'
  gem 'capybara'
  gem 'selenium-webdriver'
end

group :production do
  gem 'rails_12factor'
  gem 'rails_serve_static_assets'
  gem 'rails_stdout_logging'
end
